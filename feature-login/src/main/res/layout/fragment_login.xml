<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.login.LoginFragment">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background"
        tools:ignore="ContentDescription"
        tools:viewBindingIgnore="true" />

    <FrameLayout
        android:id="@+id/login_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:background="@color/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@+id/image_view"
        app:layout_constraintEnd_toEndOf="@+id/image_view"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <EditText
        style="@style/LegendsEditStyle"
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_login"
        android:importantForAutofill="no"
        android:inputType="text"
        android:selectAllOnFocus="true"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_margin="@dimen/login_form_margin"
        app:layout_constraintEnd_toEndOf="@+id/login_frame"
        app:layout_constraintStart_toStartOf="@+id/login_frame"
        app:layout_constraintTop_toTopOf="@+id/login_frame"
        app:layout_constraintBottom_toTopOf="@id/password"/>

    <EditText
        style="@style/LegendsEditStyle"
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/login_form_margin"
        android:hint="@string/prompt_password"
        android:imeActionLabel="@string/prompt_password"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        app:layout_constraintBottom_toTopOf="@+id/button_sign_in"
        app:layout_constraintEnd_toEndOf="@+id/login_frame"
        app:layout_constraintStart_toStartOf="@+id/login_frame"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_button_sign_in"
        android:layout_marginHorizontal="@dimen/login_form_margin"
        app:layout_constraintBottom_toTopOf="@+id/button_sign_up"
        app:layout_constraintEnd_toEndOf="@+id/login_frame"
        app:layout_constraintStart_toStartOf="@+id/login_frame" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_button_sign_up"
        android:layout_margin="@dimen/login_form_margin"
        app:layout_constraintBottom_toBottomOf="@+id/login_frame"
        app:layout_constraintEnd_toEndOf="@+id/login_frame"
        app:layout_constraintStart_toStartOf="@+id/login_frame" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/login_form_margin"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/login_error_text_size"
        android:background="@drawable/error_text_style"
        android:textColor="@color/colorErrorText"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/login_sign_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_frame"
        tools:text="@string/fail_to_sign_in" />

    <ImageView
        android:id="@+id/login_sign_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:paddingBottom="32dp"
        android:src="@drawable/legends_sign"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:viewBindingIgnore="true" />

</androidx.constraintlayout.widget.ConstraintLayout>