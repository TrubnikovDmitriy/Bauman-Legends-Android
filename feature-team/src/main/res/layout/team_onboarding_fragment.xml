<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    android:orientation="vertical"
    tools:context=".presentation.screens.onboarding.TeamOnBoardingFragment">

    <TextView
        style="@style/LegendsTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="@dimen/container_padding"
        android:layout_marginHorizontal="32dp"
        android:text="@string/you_are_alone_label"
        android:background="@drawable/button_background" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_create_team"
        style="@style/LegendsCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/container_padding"
        app:cardBackgroundColor="@color/colorSecondaryLight">

        <TextView
            style="@style/LegendsTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:text="@string/create_team_label"
            android:textColor="@color/colorSecondaryText"
            app:drawableEndCompat="@drawable/ic_create"
            app:drawableTint="@color/colorPrimary"
            tools:drawableEnd="@drawable/ic_create"
            tools:drawableTint="@color/colorPrimary" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_join_team"
        style="@style/LegendsCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/container_padding"
        app:cardBackgroundColor="@color/colorSecondaryLight">

        <TextView
            style="@style/LegendsTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="@string/join_team_label"
            android:textColor="@color/colorSecondaryText"
            app:drawableEndCompat="@drawable/ic_join"
            app:drawableTint="@color/colorPrimary"
            tools:drawableEnd="@drawable/ic_join"
            tools:drawableTint="@color/colorPrimary" />

    </androidx.cardview.widget.CardView>

</LinearLayout>